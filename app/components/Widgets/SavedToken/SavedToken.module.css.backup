/* SavedToken Widget Styles */
.root {
  position: fixed;
  inset: 0;
  z-index: 50;
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.2s ease-in-out;
}

.root.open {
  opacity: 1;
  pointer-events: auto;
}

.overlay {
  position: absolute;
  inset: 0;
  background: rgba(0, 0, 0, 0.6);
  backdrop-filter: blur(4px);
}

.panel {
  position: absolute;
  top: 0;
  right: 0;
  width: 450px;
  height: 100vh;
  background: linear-gradient(135deg, #2a1810 0%, #1f1108 100%);
  border-left: 1px solid #4a3829;
  box-shadow: -4px 0 20px rgba(0, 0, 0, 0.4);
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

@media (max-width: 768px) {
  .panel {
    width: 100vw;
    max-width: 100%;
  }
}

.header {
  display: flex;
  align-items: center;
  padding: 20px 24px;
  border-bottom: 1px solid #4a3829;
  background: linear-gradient(135deg, #3a2718 0%, #2a1810 100%);
  flex-shrink: 0;
}

.icon {
  width: 32px;
  height: 32px;
  background: linear-gradient(135deg, #ffb000 0%, #ff8c00 100%);
  border-radius: 8px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 700;
  color: #1a0f08;
  margin-right: 12px;
  font-size: 14px;
}

.title {
  font-size: 18px;
  font-weight: 600;
  color: #ffd79a;
  text-shadow: 0 1px 2px rgba(0, 0, 0, 0.4);
}

.sub {
  font-size: 12px;
  color: #b8956f;
  margin-top: 2px;
}

.spacer {
  flex: 1;
}

.btn {
  background: none;
  border: 1px solid #5a4332;
  color: #e6d4a3;
  padding: 6px 12px;
  border-radius: 6px;
  font-size: 12px;
  cursor: pointer;
  transition: all 0.2s ease;
  margin-left: 8px;
}

.btn:hover {
  background: rgba(255, 255, 255, 0.1);
  border-color: #7a6352;
}

.body {
  flex: 1;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.controls {
  padding: 16px 24px;
  border-bottom: 1px solid #4a3829;
  background: #1f1108;
  flex-shrink: 0;
}

.searchField {
  display: flex;
  flex-direction: column;
  gap: 6px;
}

.searchField label {
  font-size: 12px;
  color: #b8956f;
  font-weight: 500;
}

.searchField input {
  background: #2a1810;
  border: 1px solid #4a3829;
  border-radius: 6px;
  padding: 8px 12px;
  color: #e6d4a3;
  font-size: 14px;
  outline: none;
  transition: border-color 0.2s ease;
}

.searchField input:focus {
  border-color: var(--primary-500);
  box-shadow: 0 0 0 2px rgba(255, 178, 32, 0.12);
}

.searchField input::placeholder {
  color: var(--muted-400);
}

.tokenList {
  flex: 1;
  overflow-y: auto;
  padding: 16px 0;
}

/* Custom scrollbar */
.tokenList::-webkit-scrollbar {
  width: 6px;
}

.tokenList::-webkit-scrollbar-track {
  background: var(--bg-950);
}

.tokenList::-webkit-scrollbar-thumb {
  background: var(--border-500);
  border-radius: 3px;
}

.tokenList::-webkit-scrollbar-thumb:hover {
  background: rgba(139, 90, 43, 1.2);
}

.tokenItem {
  display: flex;
  align-items: center;
  padding: 12px 24px;
  cursor: pointer;
  transition: background-color 0.2s ease;
  border-bottom: 1px solid rgba(184, 137, 87, 0.18);
}

.tokenItem:hover {
  background: rgba(255, 178, 32, 0.06);
}

.tokenItem:last-child {
  border-bottom: none;
}

.tokenImage {
  width: 40px;
  height: 40px;
  border-radius: 12px;
  background: radial-gradient(
    100% 100% at 70% 20%,
    #ffd589 0%,
    #ffb020 45%,
    #e89909 100%
  );
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 800;
  color: #3a1e0e;
  font-size: 14px;
  margin-right: 12px;
  flex-shrink: 0;
  border: 1px solid var(--border-500);
}

.tokenInfo {
  flex: 1;
  min-width: 0;
}

.tokenName {
  font-size: 14px;
  font-weight: 600;
  color: var(--text-100);
  margin-bottom: 2px;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.tokenDetails {
  display: flex;
  align-items: center;
  gap: 8px;
  font-size: 12px;
  color: var(--text-300);
}

.tokenSymbol {
  font-weight: 500;
}

.tokenChain {
  background: rgba(255, 178, 32, 0.12);
  padding: 2px 6px;
  border-radius: 999px;
  border: 1px solid var(--border-500);
  font-size: 10px;
  color: var(--primary-400);
}

.tokenPrice {
  font-size: 12px;
  font-weight: 600;
  color: var(--success-500);
  margin-left: auto;
  flex-shrink: 0;
}

.emptyState {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40px 24px;
  text-align: center;
}

.emptyIcon {
  width: 64px;
  height: 64px;
  background: radial-gradient(
    100% 100% at 70% 20%,
    #ffd589 0%,
    #ffb020 45%,
    #e89909 100%
  );
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16px;
  opacity: 0.6;
}

.emptyTitle {
  font-size: 16px;
  font-weight: 700;
  color: var(--text-100);
  margin-bottom: 8px;
}

.emptyMessage {
  font-size: 14px;
  color: var(--text-300);
  line-height: 1.4;
}

.footer {
  padding: 16px 24px;
  border-top: 1px solid rgba(184, 137, 87, 0.18);
  background: var(--bg-950);
  flex-shrink: 0;
}

.footerContent {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 12px;
  color: var(--muted-400);
}

.removeBtn {
  background: none;
  border: none;
  color: #ff5c5c;
  padding: 4px;
  border-radius: 4px;
  cursor: pointer;
  opacity: 0;
  transition: all 0.2s ease;
  margin-left: 8px;
}

.tokenItem:hover .removeBtn {
  opacity: 1;
}

.removeBtn:hover {
  background: rgba(255, 92, 92, 0.1);
}

/* Mobile: ensure perfect harmony with Chat widget */
@media (max-width: 768px) {
  .panel {
    width: 100vw;
  }
  .btn,
  .searchField input {
    box-shadow: none !important;
    -webkit-appearance: none;
    appearance: none;
  }
}
